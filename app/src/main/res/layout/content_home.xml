<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="60dp"
    android:fillViewport="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/samimage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:onClick="goSamList"
            app:srcCompat="@drawable/samsung_logo_square" />

        <Button
            android:id="@+id/sambtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Samsung" />

        <TextView
            android:id="@+id/samtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/samtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CONDITIONS"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/appleimage"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:scaleType="centerCrop"
            android:onClick="goAppleList"
            app:srcCompat="@drawable/apple" />

        <Button
            android:id="@+id/Applebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/APPLE" />

        <TextView
            android:id="@+id/Appletext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/Appletext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CONDITIONS"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/oneimage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:onClick="goOneplusList"
            app:srcCompat="@drawable/oneplus_square" />

        <Button
            android:id="@+id/onebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Oneplus" />

        <TextView
            android:id="@+id/onetext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/onetext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CONDITIONS"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/googleimage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/download" />

        <Button
            android:id="@+id/googlebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Oneplus" />

        <TextView
            android:id="@+id/googletext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OFF"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/googletext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CONDITIONS"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>



</ScrollView>